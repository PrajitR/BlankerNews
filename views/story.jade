extends layout

block content
  if story.url
    a(href="#{story.url}") #{story.title}
  else
    h1 #{story.title}
    br
    p #{story.text}
  p #{story.submitter}

  form(action="#{submitComment}", method="post")
    textarea(name="comment")
    br
    button(type="submit") Submit Comment

  ul#comments
    each comment in story.comments 
      li #{comment}
